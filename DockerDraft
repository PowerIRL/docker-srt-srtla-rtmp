DEBIAN_FRONTEND=nointeractive apt-get update -y
DEBIAN_FRONTEND=nointeractive apt-get upgrade -y
DEBIAN_FRONTEND=nointeractive apt-get install tclsh pkg-config cmake openssl libssl-dev build-essential zlib1g-dev -y 
DEBIAN_FRONTEND=nointeractive apt install git -y
cd /opt
git clone https://github.com/onsmith/srt.git
cd srt
./configure
make -j${nproc}
make install
cd..
git clone https://github.com/PowerIRL/srt-live-server.git
cd srt-live-server
make -j${nproc}
cd ..
git clone https://github.com/BELABOX/srtla.git
cd srtla
make -j${nproc}
cd ..
ldconfig
cd srt-live-server
./bin/sls -c sls.conf